<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ngame="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/people_lv_0_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm020"
        android:scaleType="centerInside"
        android:src="@drawable/ic_matiral_lv_circle" />

    <TextView
        android:id="@+id/people_lv_1_tv"
        style="@style/px24_666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginTop="@dimen/dm_005"
        android:layout_toRightOf="@id/people_lv_0_iv" />

    <TextView
        android:id="@+id/people_lv_2_tv"
        style="@style/px24_666"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/people_lv_1_tv"
        android:layout_margin="@dimen/dm020"
        android:layout_toRightOf="@id/people_lv_0_iv"
        android:background="@drawable/shape_eeeeee_15px"
        android:padding="@dimen/dm030"
        android:text="" />

    <View
        android:id="@+id/people_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm005"
        android:layout_alignLeft="@id/people_lv_1_tv"
        android:layout_below="@id/people_lv_2_tv"
        android:background="@color/transparent"></View>

    <View
        android:layout_width="@dimen/dm002"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/people_bottom_line"
        android:layout_below="@id/people_lv_0_iv"
        android:layout_marginLeft="@dimen/dm030"
        android:background="@color/eee" />

    <TextView
        android:id="@+id/people_lv_3_tv"
        style="@style/px28_666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="@dimen/dm050"
        android:privateImeOptions="@dimen/dm100"
        android:text=""
        android:visibility="gone" />
</RelativeLayout>
