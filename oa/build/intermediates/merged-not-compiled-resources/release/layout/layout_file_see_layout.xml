<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_detail_file_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/card_detail_file_title"
        style="@style/px26_a5a5a5"
        android:layout_width="@dimen/item_key_width"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="附件" />

    <com.android.livevideo.view.ScrollListView
        android:id="@+id/horizontal_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_toRightOf="@id/card_detail_file_title"
        android:clipToPadding="false"
        android:divider="@color/white"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:listSelector="@color/transparent"
        android:overScrollMode="never"
        android:scrollbars="none"></com.android.livevideo.view.ScrollListView>

    <TextView
        android:id="@+id/file_link_iv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dm060"
        android:layout_alignParentRight="true"
        android:drawableRight="@drawable/ic_link"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/dm010"
        android:textColor="@color/color_hint"
        android:textSize="@dimen/dm026"
        android:visibility="gone" />


</RelativeLayout>
