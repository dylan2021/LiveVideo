<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dm035"
    android:paddingRight="@dimen/main_margin_left_x">

    <TextView
        android:id="@+id/emplyee_name_tv"
        style="@style/px26_212121"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="" />

    <TextView
        android:id="@+id/emplyee_wage_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/dm020"
        android:drawableRight="@drawable/ic_next"
        android:text=""
        android:textColor="@color/b3"
        android:textSize="@dimen/dm026" />

</LinearLayout>