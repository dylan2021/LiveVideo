<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_title_left_center"></include>

    <include layout="@layout/layout_line_1px_divider"></include>

    <include layout="@layout/layout_line_height_f5"></include>

    <com.android.livevideo.view.PullScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dm010"
            android:paddingRight="@dimen/main_margin_left_x">

            <RelativeLayout
                android:id="@+id/leave_type_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:background="@drawable/shape_line_divider_bottom">

                <include layout="@layout/layout_must_input_pic" />

                <TextView
                    android:id="@+id/leave_type_title_tv"
                    style="@style/px26_212121"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/main_margin_left_x"
                    android:text="@string/project" />

                <TextView
                    android:id="@+id/hours_in_name_tv"
                    style="@style/px26_212121"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="@dimen/drawable_padding"
                    android:drawableRight="@drawable/ic_next"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:hint="请选择"
                    android:maxLines="1"
                    android:textColorHint="@color/color_hint" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:background="@drawable/shape_line_divider_bottom">

                <include layout="@layout/layout_must_input_pic" />

                <TextView
                    style="@style/px26_212121"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/main_margin_left_x"
                    android:text="所属部门" />

                <TextView
                    android:id="@+id/belong_department_tv"
                    style="@style/px26_212121"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="@dimen/drawable_padding"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:maxLines="1"
                    android:textColorHint="@color/color_hint" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/end_time_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:background="@drawable/shape_line_divider_bottom">

                <include layout="@layout/layout_must_input_pic" />

                <TextView
                    style="@style/px26_212121"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/main_margin_left_x"
                    android:text="日期" />

                <TextView
                    android:id="@+id/hours_add_time_tv"
                    style="@style/px26_212121"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:drawablePadding="@dimen/drawable_padding"
                    android:drawableRight="@drawable/ic_next"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:hint="请选择"
                    android:maxLines="1"
                    android:textColorHint="@color/color_hint" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:background="@drawable/shape_line_divider_bottom">

                <!--     <include layout="@layout/layout_must_input_pic" />-->

                <TextView
                    style="@style/px26_212121"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/main_margin_left_x"
                    android:text="参与人员(正式)" />

                <TextView
                    android:id="@+id/employee_formal_tv"
                    style="@style/px26_212121"
                    android:layout_width="@dimen/dm360"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:drawablePadding="@dimen/drawable_padding"
                    android:drawableRight="@drawable/ic_next"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:hint="请选择"
                    android:maxLines="2"
                    android:textColorHint="@color/color_hint" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:background="@drawable/shape_line_divider_bottom">

                <!--    <include layout="@layout/layout_must_input_pic" />-->

                <TextView
                    style="@style/px26_212121"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/main_margin_left_x"
                    android:text="参与人员(临时)" />

                <TextView
                    android:id="@+id/employee_temporary_tv"
                    style="@style/px26_212121"
                    android:layout_width="@dimen/dm360"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:drawablePadding="@dimen/drawable_padding"
                    android:drawableRight="@drawable/ic_next"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:hint="请选择"
                    android:maxLines="2"
                    android:textColorHint="@color/color_hint" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/hours_add_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:background="@drawable/shape_line_divider_bottom">

                <TextView
                    style="@style/px26_212121"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/main_margin_left_x"
                    android:text="计时(小时)" />

                <EditText
                    android:id="@+id/hours_in_hours_sum_tv"
                    style="@style/px26_212121"
                    android:layout_width="@dimen/dm400"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:drawablePadding="@dimen/drawable_padding"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:hint="@string/input_hint"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:singleLine="true"
                    android:textColorHint="@color/color_hint"
                    android:textCursorDrawable="@drawable/shape_cursor_color_main_color" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:background="@drawable/shape_line_divider_bottom">

                <include
                    android:id="@+id/must_inout_iv"
                    layout="@layout/layout_must_input_pic" />

                <TextView
                    android:id="@+id/hours_in_numbers_title_tv"
                    style="@style/px26_212121"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/main_margin_left_x"
                    android:text="计件" />

                <EditText
                    android:id="@+id/hours_in_numbers_sum_tv"
                    style="@style/px26_212121"
                    android:layout_width="@dimen/dm400"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:drawablePadding="@dimen/drawable_padding"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:hint="@string/input_hint"
                    android:inputType="numberDecimal"
                    android:maxLength="8"
                    android:singleLine="true"
                    android:textColorHint="@color/color_hint"
                    android:textCursorDrawable="@drawable/shape_cursor_color_main_color" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/everyone_num_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:background="@drawable/shape_line_divider_bottom">

                <TextView
                    style="@style/px26_212121"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/main_margin_left_x"
                    android:text="人均计件" />

                <TextView
                    android:id="@+id/everyone_num_tv"
                    style="@style/px26_212121"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="@dimen/drawable_padding"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:hint="@string/hint_auto_count"
                    android:maxLines="1"
                    android:textColorHint="@color/color_hint" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/deduct_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:background="@drawable/shape_line_divider_bottom">

                <TextView
                    style="@style/px26_212121"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/main_margin_left_x"
                    android:text="扣款(元)" />

                <EditText
                    android:id="@+id/hours_in_money_deduct_tv"
                    style="@style/px26_212121"
                    android:layout_width="@dimen/dm400"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:drawablePadding="@dimen/drawable_padding"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:hint="@string/input_hint"
                    android:inputType="numberDecimal"
                    android:maxLength="15"
                    android:singleLine="true"
                    android:textColorHint="@color/color_hint"
                    android:textCursorDrawable="@drawable/shape_cursor_color_main_color" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/deduct_layout_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_title_height"
                android:background="@drawable/shape_line_divider_bottom">

                <TextView
                    style="@style/px26_212121"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/main_margin_left_x"
                    android:text="扣款类型" />

                <TextView
                    android:id="@+id/money_deduct_type_tv"
                    style="@style/px26_212121"
                    android:layout_width="@dimen/item_et_max_width"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="@dimen/drawable_padding"
                    android:drawableRight="@drawable/ic_next"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:hint="@string/hint_selete"
                    android:maxLines="1"
                    android:textColorHint="@color/color_hint" />

            </RelativeLayout>

            <!--备注-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/main_margin_left_x"
                android:background="@color/white">

                <TextView
                    android:id="@+id/hours_in_remark_title_tv"
                    style="@style/px26_212121"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/item_height"
                    android:gravity="center_vertical"
                    android:text="备注" />

                <EditText
                    android:id="@+id/remark_tv"
                    style="@style/px26_212121"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hours_in_remark_title_tv"
                    android:background="@color/white"
                    android:focusableInTouchMode="true"
                    android:gravity="top"
                    android:hint="@string/input_hint"
                    android:minHeight="@dimen/desc_edit_height"
                    android:paddingBottom="@dimen/dm020"
                    android:paddingRight="@dimen/main_margin_left_x"
                    android:paddingTop="@dimen/dm020"
                    android:text=""
                    android:textColorHint="@color/color_hint"
                    android:textCursorDrawable="@drawable/shape_cursor_color_main_color" />
            </RelativeLayout>
        </LinearLayout>

    </com.android.livevideo.view.PullScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_bt_height"
        android:layout_marginBottom="@dimen/dm015"
        android:layout_marginLeft="@dimen/dm025"
        android:layout_marginRight="@dimen/dm025"
        android:layout_marginTop="@dimen/dm015"
        android:background="@drawable/selector_login_bt"
        android:onClick="onReportCommitClick"
        android:text="@string/save"
        android:textColor="@color/white"
        android:textSize="@dimen/main_margin_left_x" />
</LinearLayout>