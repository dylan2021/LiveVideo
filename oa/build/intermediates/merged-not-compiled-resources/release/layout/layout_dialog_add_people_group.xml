<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dm025"
        android:text="添加班组"
        android:background="@color/mainColor"
        android:textColor="@color/white"
        android:textSize="@dimen/dm028" />

    <include layout="@layout/layout_line_1px_d9d9d9"></include>
    <!--android:background="@drawable/shape_simple_dialog_white"-->
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/dialog_add_card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm040"
        android:layout_marginRight="@dimen/dm040"
        android:layout_marginTop="@dimen/dm010"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:maxLength="10"
        android:paddingTop="@dimen/dm010"
        android:textColorHint="@color/ccc"
        android:textCursorDrawable="@drawable/shape_cursor_color_main_color"
        android:textSize="@dimen/dm026"
        app:met_autoValidate="true"
        app:met_baseColor="@color/color_1a"
        app:met_clearButton="true"
        app:met_errorColor="@color/color_warning"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelPadding="@dimen/dm015"
        app:met_maxCharacters="10"
        app:met_primaryColor="@color/mainColor"
         />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/add_group_plan_in_people_numb_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm040"
        android:layout_marginRight="@dimen/dm040"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="@dimen/dm_003"
        android:inputType="number"
        android:maxLength="5"
        android:textColorHint="@color/ccc"
        android:textCursorDrawable="@drawable/shape_cursor_color_main_color"
        android:textSize="@dimen/dm026"
        app:met_autoValidate="true"
        app:met_baseColor="@color/color_1a"
        app:met_clearButton="true"
        app:met_errorColor="@color/color_warning"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelPadding="@dimen/dm010"
        app:met_maxCharacters="5"
        app:met_primaryColor="@color/mainColor"
         />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dm040"
        android:text="@string/plan_in_out_date_str"
        android:textColor="@color/ccc"
        android:textSize="@dimen/dm026" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dm030"
        android:layout_marginLeft="@dimen/dm040"
        android:layout_marginRight="@dimen/dm030"
        android:layout_marginTop="@dimen/dm020"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/real_start_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_rb_bg"
            android:clickable="true"
            android:paddingBottom="@dimen/dm013"
            android:paddingLeft="@dimen/dm010"
            android:paddingRight="@dimen/dm010"
            android:paddingTop="@dimen/dm013"
            android:text="2018-01-01"
            android:textColor="@color/color999"
            android:textSize="@dimen/dm026" />

        <View
            android:layout_width="@dimen/dm040"
            android:layout_height="@dimen/dm001"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dm020"
            android:background="@color/ccc"></View>

        <TextView
            android:id="@+id/real_end_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm020"
            android:background="@drawable/selector_rb_bg"
            android:button="@null"
            android:clickable="true"
            android:paddingBottom="@dimen/dm013"
            android:paddingLeft="@dimen/dm010"
            android:paddingRight="@dimen/dm010"
            android:paddingTop="@dimen/dm013"
            android:text="2018-12-31"
            android:textColor="@color/color999"
            android:textSize="@dimen/dm026" />
    </LinearLayout>

    <include layout="@layout/layout_line_1px_d9d9d9"></include>

    <Button
        android:id="@+id/dialog_add_card_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/selector_bg_white_f2"
        android:gravity="center"
        android:text="@string/sure"
        android:textColor="@color/mainColor"
        android:textSize="@dimen/dm026" />
</LinearLayout>