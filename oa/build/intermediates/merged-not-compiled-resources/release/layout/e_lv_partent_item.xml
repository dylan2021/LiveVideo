<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dm085"
    android:background="@drawable/shape_line_divider_bottom"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dm030"
    android:paddingRight="@dimen/dm030">

    <TextView
        android:id="@+id/label_group_title"
        style="@style/px28_mainColor"
        android:layout_width="match_parent"
        android:layoutDirection="rtl"
        android:gravity="left"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
    />

    <TextView
        android:id="@+id/group_number_tv"
        style="@style/px28_212121"
        android:drawableRight="@drawable/selector_ic_next"
        android:drawablePadding="@dimen/dm010"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
      />
</RelativeLayout>