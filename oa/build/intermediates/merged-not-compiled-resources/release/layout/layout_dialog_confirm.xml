<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="match_parent"
    android:background="@drawable/shape_simple_dialog_white" >
    
    <TextView 
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/dm020"
        android:gravity="center"
		android:text="@string/update"
        android:textSize="@dimen/dm030"
		android:textColor="@color/color212121"/>
    
    <View 
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
        android:layout_below="@+id/title"
        android:background="#c9c9c9"/>

	<!-- 内容布局的容器 -->

	<LinearLayout
		android:id="@+id/content_wrapper"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:orientation="vertical"
		android:layout_below="@+id/line1">

	</LinearLayout>

    <View 
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_below="@+id/content_wrapper"
        android:layout_marginTop="15dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
        android:background="#c9c9c9"/>

	<LinearLayout
        android:layout_width="match_parent"
		android:layout_height="40dp"
		android:orientation="horizontal"
		android:layout_below="@+id/line2">

			<TextView
				android:id="@+id/left_tv"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_gravity="center"
				android:gravity="center"
				android:layout_weight="1"
				android:textSize="@dimen/dm028"
				android:textColor="@color/color212121"/>

			<View
				android:id="@+id/line3"
				android:layout_width="0.7dp"
				android:layout_height="35dp"
				android:background="#c9c9c9"/>

			<TextView
				android:id="@+id/right_tv"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_gravity="center"
				android:gravity="center"
				android:layout_weight="1"
				android:textSize="@dimen/dm028"
				android:textColor="@color/mainColor"/>

	</LinearLayout>

</RelativeLayout>
