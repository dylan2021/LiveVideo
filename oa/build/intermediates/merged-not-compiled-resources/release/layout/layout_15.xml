<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_title_height"
        android:background="@drawable/shape_line_divider_bottom">

        <include layout="@layout/layout_must_input_pic" />

        <TextView
            style="@style/px26_212121"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/main_margin_left_x"
            android:text="关联过磅单" />

        <TextView
            android:id="@+id/weigh_number_tv"
            style="@style/px26_212121"
            android:layout_width="@dimen/item_et_max_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:drawablePadding="@dimen/drawable_padding"
            android:drawableRight="@drawable/ic_next"
            android:ellipsize="end"
            android:gravity="center_vertical|right"
            android:hint="请选择"
            android:maxLines="1"
            android:paddingRight="@dimen/next_padding_right"
            android:textColorHint="@color/color_hint" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_title_height"
        android:background="@drawable/shape_line_divider_bottom">
        <include layout="@layout/layout_must_input_pic" />
        <TextView
            style="@style/px26_212121"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/main_margin_left_x"
            android:text="产品名称" />

        <TextView
            android:id="@+id/product_name_tv"
            style="@style/px26_212121"
            android:layout_width="@dimen/item_et_max_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:drawablePadding="@dimen/drawable_padding"
            android:drawableRight="@drawable/ic_next"
            android:ellipsize="end"
            android:gravity="center_vertical|right"
            android:hint="请选择"
            android:maxLines="1"
            android:paddingRight="@dimen/next_padding_right"
            android:textColorHint="@color/color_hint" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_title_height"
        android:background="@drawable/shape_line_divider_bottom">
        <include layout="@layout/layout_must_input_pic" />
        <TextView
            style="@style/px26_212121"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/main_margin_left_x"
            android:text="产品规格" />

        <TextView
            android:id="@+id/product_spec_tv"
            style="@style/px26_212121"
            android:layout_width="@dimen/item_et_max_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:drawablePadding="@dimen/drawable_padding"
            android:drawableRight="@drawable/ic_next"
            android:ellipsize="end"
            android:gravity="center_vertical|right"
            android:hint="请选择"
            android:maxLines="1"
            android:paddingRight="@dimen/next_padding_right"
            android:textColorHint="@color/color_hint" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:background="@drawable/shape_line_divider_bottom">

        <TextView
            style="@style/px26_212121"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/main_margin_left_x"
            android:text="车牌号" />

        <TextView
            android:id="@+id/tv_15_car_number"
            style="@style/px26_212121"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="right"
            android:hint="@string/hint_auto_get"
            android:maxLines="1"
            android:paddingRight="@dimen/main_margin_left_x"
            android:textColorHint="@color/color_hint" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:background="@drawable/shape_line_divider_bottom">

        <TextView
            style="@style/px26_212121"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/main_margin_left_x"
            android:text="产地" />

        <TextView
            android:id="@+id/tv_15_address"
            style="@style/px26_212121"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="right"
            android:hint="@string/hint_auto_get"
            android:maxLines="1"
            android:paddingRight="@dimen/main_margin_left_x"
            android:textColorHint="@color/color_hint" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_title_height"
        android:background="@drawable/shape_line_divider_bottom">


        <TextView
            style="@style/px26_212121"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/main_margin_left_x"
            android:text="卸车负责人" />

        <EditText
            android:id="@+id/tv_15_car_person"
            style="@style/px26_212121"
            android:layout_width="@dimen/dm400"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:drawablePadding="@dimen/drawable_padding"
            android:ellipsize="end"
            android:gravity="center_vertical|right"
            android:hint="@string/input_hint"
            android:maxLength="10"
            android:maxLines="1"
            android:paddingRight="@dimen/main_margin_left_x"
            android:textColorHint="@color/color_hint"
            android:textCursorDrawable="@drawable/shape_cursor_color_main_color" />

    </RelativeLayout>

    <include layout="@layout/layout_line_height_eee" />

    <LinearLayout
        android:id="@+id/layout_item_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

    </LinearLayout>

    <TextView
        android:id="@+id/add_pool_15_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:clickable="true"
        android:drawablePadding="@dimen/dm020"
        android:gravity="center"
        android:onClick="onPoolAddClick11"
        android:padding="@dimen/dm020"
        android:paddingLeft="@dimen/dm025"
        android:paddingRight="@dimen/dm025"
        android:text="+ 添加入池"
        android:textColor="@color/mainColor"
        android:textSize="@dimen/dm026" />

</LinearLayout>