<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_title_left_center"></include>

    <include layout="@layout/layout_line_height_f5"></include>

    <com.android.livevideo.view.PullScrollView
        android:id="@+id/report_psv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/f5"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/leave_type_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_title_height"
                android:layout_marginTop="@dimen/line_height"
                android:background="@drawable/shape_line_divider_bottom"
                android:clickable="true"
                android:visibility="gone">

                <include layout="@layout/layout_must_input_pic" />

                <TextView
                    android:id="@+id/leave_type_title_tv"
                    style="@style/px26_212121"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/main_margin_left_x"
                    android:text="请假类型" />

                <TextView
                    android:id="@+id/type_value_tv"
                    style="@style/px26_212121"
                    android:layout_width="@dimen/item_et_max_width"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:drawablePadding="@dimen/drawable_padding"
                    android:drawableRight="@drawable/ic_next"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:hint="请选择"
                    android:maxLines="1"
                    android:paddingRight="@dimen/next_padding_right"
                    android:textColorHint="@color/color_hint" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/work_layout_item_0"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:background="@drawable/shape_line_divider_bottom"
                android:visibility="gone">

                <TextView
                    android:id="@+id/item_0_title_tv"
                    style="@style/px26_212121"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/main_margin_left_x"
                    android:text="" />

                <TextView
                    android:id="@+id/item_0_value_tv"
                    style="@style/px26_212121"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:hint=""
                    android:maxLines="1"
                    android:paddingRight="@dimen/main_margin_left_x"
                    android:textColorHint="@color/color_hint" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/work_layout_item_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:background="@drawable/shape_line_divider_bottom"
                android:visibility="gone">

                <TextView
                    android:id="@+id/item_1_title_tv"
                    style="@style/px26_212121"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/main_margin_left_x"
                    android:text="" />

                <TextView
                    android:id="@+id/item_1_value_tv"
                    style="@style/px26_212121"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:hint=""
                    android:maxLines="1"
                    android:paddingRight="@dimen/main_margin_left_x"
                    android:textColorHint="@color/color_hint" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/work_layout_item_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:background="@drawable/shape_line_divider_bottom"
                android:visibility="gone">

                <TextView
                    android:id="@+id/item_2_title_tv"
                    style="@style/px26_212121"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/main_margin_left_x"
                    android:text="" />

                <TextView
                    android:id="@+id/item_2_value_tv"
                    style="@style/px26_212121"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:hint=""
                    android:maxLines="1"
                    android:paddingRight="@dimen/main_margin_left_x"
                    android:textColorHint="@color/color_hint" />
            </RelativeLayout>

            <TextView
                android:id="@+id/leave_time_title_tv"
                style="@style/px24_a5a5a5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm070"
                android:background="@color/eee"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dm020"
                android:text="请假时间"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/start_time_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:background="@drawable/shape_line_divider_bottom">

                <include layout="@layout/layout_must_input_pic" />

                <TextView
                    android:id="@+id/start_time_title_tv"
                    style="@style/px26_212121"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/main_margin_left_x"
                    android:text="开始时间" />

                <TextView
                    android:id="@+id/work_start_time_tv"
                    style="@style/px26_212121"
                    android:layout_width="@dimen/item_et_max_width"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:drawablePadding="@dimen/drawable_padding"
                    android:drawableRight="@drawable/ic_next"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:hint="请选择"
                    android:maxLines="1"
                    android:paddingRight="@dimen/next_padding_right"
                    android:textColorHint="@color/color_hint" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/end_time_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:background="@drawable/shape_line_divider_bottom"
                android:visibility="gone">

                <include layout="@layout/layout_must_input_pic" />

                <TextView
                    android:id="@+id/end_time_title_tv"
                    style="@style/px26_212121"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/main_margin_left_x"
                    android:text="结束时间" />

                <TextView
                    android:id="@+id/work_end_time_tv"
                    style="@style/px26_212121"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:drawablePadding="@dimen/drawable_padding"
                    android:drawableRight="@drawable/ic_next"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:hint="请选择"
                    android:maxLines="1"
                    android:paddingRight="@dimen/next_padding_right"
                    android:textColorHint="@color/color_hint" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/leave_overtime_hour_title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    style="@style/px22_a5a5a5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dm020"
                    android:layout_marginLeft="@dimen/main_margin_left_x"
                    android:layout_marginTop="@dimen/main_margin_left_x"
                    android:text="为了方便统计,请填写每日时长" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm070"
                    android:layout_marginLeft="@dimen/main_margin_left_x"
                    android:layout_marginRight="@dimen/main_margin_left_x"
                    android:background="@drawable/shape_eee_1px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/hour_layout_title_tv"
                        style="@style/px24_a5a5a5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/main_margin_left_x"
                        android:text="加班时间" />

                    <View
                        android:layout_width="@dimen/dm001"
                        android:layout_height="match_parent"
                        android:background="@color/divider_color" />

                    <TextView
                        style="@style/px24_a5a5a5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_required_tag"
                        android:drawablePadding="@dimen/dm010"
                        android:paddingLeft="@dimen/dm015"
                        android:text="（小时）" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/leave_overtime_hour_sum_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/main_margin_left_x"
                android:paddingRight="@dimen/main_margin_left_x"
                android:orientation="vertical"></LinearLayout>

            <TextView
                android:id="@+id/add_leave_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/white"
                android:clickable="true"
                android:drawablePadding="@dimen/dm020"
                android:gravity="center"
                android:visibility="gone"
                android:padding="@dimen/dm020"
                android:paddingLeft="@dimen/dm025"
                android:paddingRight="@dimen/dm025"
                android:text="+ 添加请假"
                android:textColor="@color/mainColor"
                android:textSize="@dimen/dm026" />

            <RelativeLayout
                android:id="@+id/hours_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:layout_marginTop="@dimen/line_height"
                android:background="@drawable/shape_line_divider_bottom"
                android:visibility="gone">

                <include layout="@layout/layout_must_input_pic" />

                <TextView
                    style="@style/px26_212121"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/main_margin_left_x"
                    android:text="总时长(小时)" />

                <EditText
                    android:id="@+id/hours_tv"
                    style="@style/px26_212121"
                    android:layout_width="@dimen/item_et_max_width"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="right|center_vertical"
                    android:hint=""
                    android:inputType="number"
                    android:maxLength="4"
                    android:maxLines="1"
                    android:paddingRight="@dimen/main_margin_left_x"
                    android:textColorHint="@color/color_hint"
                    android:textCursorDrawable="@drawable/shape_cursor_color_main_color" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/work_pay_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_title_height"
                    android:background="@color/white">

                    <include layout="@layout/layout_must_input_pic" />

                    <TextView
                        style="@style/px26_212121"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/main_margin_left_x"
                        android:text="支付对象" />

                    <EditText
                        android:id="@+id/work_pay_to_et"
                        style="@style/px26_212121"
                        android:layout_width="@dimen/dm400"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:drawablePadding="@dimen/drawable_padding"
                        android:ellipsize="end"
                        android:gravity="center_vertical|right"
                        android:hint="请填写支付对象"
                        android:maxLines="1"
                        android:paddingRight="@dimen/next_padding_right"
                        android:textColorHint="@color/color_hint"
                        android:textCursorDrawable="@drawable/shape_cursor_color_main_color" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_title_height"
                    android:layout_marginTop="@dimen/dm001"
                    android:background="@color/white">

                    <include layout="@layout/layout_must_input_pic" />

                    <TextView
                        style="@style/px26_212121"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/main_margin_left_x"
                        android:text="开户行" />

                    <EditText
                        android:id="@+id/work_pay_bank_et"
                        style="@style/px26_212121"
                        android:layout_width="@dimen/dm400"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:drawablePadding="@dimen/drawable_padding"
                        android:ellipsize="end"
                        android:gravity="center_vertical|right"
                        android:hint="请填写开户行"
                        android:maxLines="1"
                        android:paddingRight="@dimen/next_padding_right"
                        android:textColorHint="@color/color_hint"
                        android:textCursorDrawable="@drawable/shape_cursor_color_main_color" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_title_height"
                    android:layout_marginTop="@dimen/dm001"
                    android:background="@color/white">

                    <include layout="@layout/layout_must_input_pic" />

                    <TextView
                        style="@style/px26_212121"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/main_margin_left_x"
                        android:text="银行账户" />

                    <EditText
                        android:id="@+id/bank_account_tv"
                        style="@style/px26_212121"
                        android:layout_width="@dimen/dm400"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:drawablePadding="@dimen/drawable_padding"
                        android:ellipsize="end"
                        android:gravity="center_vertical|right"
                        android:hint="请填写银行账户"
                        android:inputType="number"
                        android:maxLines="1"
                        android:paddingRight="@dimen/next_padding_right"
                        android:textColorHint="@color/color_hint"
                        android:textCursorDrawable="@drawable/shape_cursor_color_main_color" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_title_height"
                    android:layout_marginTop="@dimen/line_height"
                    android:background="@color/white">

                    <include layout="@layout/layout_must_input_pic" />

                    <TextView
                        style="@style/px26_212121"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/main_margin_left_x"
                        android:text="第一审批人" />

                    <TextView
                        android:id="@+id/next_auditor_tv1"
                        style="@style/px26_212121"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:drawablePadding="@dimen/drawable_padding"
                        android:drawableRight="@drawable/ic_next"
                        android:ellipsize="end"
                        android:gravity="center_vertical|right"
                        android:hint="请选择"
                        android:maxLines="1"
                        android:paddingRight="@dimen/next_padding_right"
                        android:textColorHint="@color/color_hint" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_title_height"
                    android:layout_marginTop="@dimen/dm001"
                    android:background="@color/white">

                    <TextView
                        style="@style/px26_212121"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/main_margin_left_x"
                        android:text="第二审批人" />

                    <TextView
                        android:id="@+id/next_auditor_tv2"
                        style="@style/px26_212121"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:drawablePadding="@dimen/drawable_padding"
                        android:drawableRight="@drawable/ic_next"
                        android:ellipsize="end"
                        android:gravity="center_vertical|right"
                        android:hint="请选择"
                        android:maxLines="1"
                        android:paddingRight="@dimen/next_padding_right"
                        android:textColorHint="@color/color_hint" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_title_height"
                    android:layout_marginTop="@dimen/dm001"
                    android:background="@color/white">

                    <TextView
                        style="@style/px26_212121"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/main_margin_left_x"
                        android:text="第三审批人" />

                    <TextView
                        android:id="@+id/next_auditor_tv3"
                        style="@style/px26_212121"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:drawablePadding="@dimen/drawable_padding"
                        android:drawableRight="@drawable/ic_next"
                        android:ellipsize="end"
                        android:gravity="center_vertical|right"
                        android:hint="请选择"
                        android:maxLines="1"
                        android:paddingRight="@dimen/next_padding_right"
                        android:textColorHint="@color/color_hint" />

                </RelativeLayout>
            </LinearLayout>
            <!--备注-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/line_height"
                android:background="@color/white">

                <ImageView
                    android:layout_width="@dimen/dm012"
                    android:layout_height="@dimen/dm012"
                    android:layout_marginLeft="@dimen/dm009"
                    android:layout_marginTop="@dimen/dm032"
                    android:background="@drawable/ic_required_tag" />

                <TextView
                    android:id="@+id/work_remark_title_tv"
                    style="@style/px26_212121"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/item_height"
                    android:layout_marginLeft="@dimen/main_margin_left_x"
                    android:gravity="center_vertical"
                    android:text="请假事由" />

                <EditText
                    android:id="@+id/remark_tv"
                    style="@style/px26_212121"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/work_remark_title_tv"
                    android:background="@color/white"
                    android:focusableInTouchMode="true"
                    android:gravity="top"
                    android:hint="请输入(200字以内)"
                    android:maxLength="200"
                    android:minHeight="@dimen/desc_edit_height"
                    android:paddingBottom="@dimen/main_margin_left_x"
                    android:paddingLeft="@dimen/main_margin_left_x"
                    android:paddingRight="@dimen/main_margin_left_x"
                    android:text=""
                    android:textColorHint="@color/color_hint"
                    android:textCursorDrawable="@drawable/shape_cursor_color_main_color" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dm080"
                android:layout_marginTop="@dimen/line_height"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/main_margin_left_x"
                android:paddingRight="@dimen/main_margin_left_x">

                <include layout="@layout/layout_file_upload_layout" />
            </LinearLayout>

            <TextView
                style="@style/px28_212121"
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_title_height"
                android:layout_marginTop="@dimen/line_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/main_margin_left_x"
                android:text="@string/approval_process_title"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/approval_process_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/dm060"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dm030"
                android:paddingTop="@dimen/dm010"
                android:visibility="gone">

            </LinearLayout>

        </LinearLayout>
    </com.android.livevideo.view.PullScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_bt_height"
        android:layout_marginBottom="@dimen/dm015"
        android:layout_marginLeft="@dimen/dm025"
        android:layout_marginRight="@dimen/dm025"
        android:layout_marginTop="@dimen/dm015"
        android:background="@drawable/selector_login_bt"
        android:onClick="onReportCommitClick"
        android:text="@string/commit"
        android:textColor="@color/white"
        android:textSize="@dimen/dm030" />

</LinearLayout>