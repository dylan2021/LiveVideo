<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
 >

    <Button
        android:layout_marginTop="@dimen/dm050"
        android:id="@+id/dialog_btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/app_title_height"
        android:background="@null"
        android:drawableLeft="@drawable/ic_back"
        android:drawablePadding="@dimen/dm015"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dm030"
        android:text="修改"
        android:textColor="@color/color666"
        android:textSize="@dimen/dm028" />


    <TextView
        android:layout_marginTop="@dimen/dm050"
        android:id="@+id/work_change_title_tv"
        style="@style/px28_212121"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/app_title_height"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm001"
        android:layout_below="@id/work_change_title_tv"
        android:background="@color/divider_color_dark"></View>

    <com.android.livevideo.view.PullScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/work_change_title_tv"
        android:layout_marginTop="@dimen/dm001"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dm130"
            android:paddingLeft="@dimen/dm025"
            android:paddingRight="@dimen/dm025">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height">

                <TextView
                    style="@style/px26_666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="申请开工日期" />

                <TextView
                    android:id="@+id/work_start_time_tv"
                    style="@style/px26_999"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:hint="请选择"
                    android:maxLines="1"
                    android:paddingRight="@dimen/dm020"
                    android:textColorHint="@color/color_hint" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_next" />
            </RelativeLayout>

            <include layout="@layout/layout_line_1px_divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height">

                <TextView
                    style="@style/px26_666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="总工期" />

                <TextView
                    android:id="@+id/total_period_tv"
                    style="@style/px26_999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint="-"
                    android:maxLines="1"
                    android:textColorHint="@color/color_hint" />
            </RelativeLayout>

            <include layout="@layout/layout_line_1px_divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_title_height"
                android:gravity="center_vertical">

                <TextView
                    style="@style/px26_666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/work_start_pre_str" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_next" />

                <TextView
                    android:id="@+id/work_start_tv"
                    style="@style/px26_999"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:clickable="true"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:hint="请选择"
                    android:maxLines="2"
                    android:paddingLeft="@dimen/dm130"
                    android:paddingRight="@dimen/dm020"
                    android:text=""
                    android:textColorHint="@color/color_hint" />
            </RelativeLayout>

            <include layout="@layout/layout_line_1px_divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height">

                <TextView
                    style="@style/px26_666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="计划开工日期" />

                <TextView
                    android:id="@+id/plan_start_time_tv"
                    style="@style/px26_999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint="-"
                    android:maxLines="1"
                    android:textColorHint="@color/color_hint" />
            </RelativeLayout>

            <include layout="@layout/layout_line_1px_divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height">

                <TextView
                    style="@style/px26_666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="计划完工日期" />

                <TextView
                    android:id="@+id/plan_end_time_tv"
                    style="@style/px26_999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:ellipsize="end"
                    android:hint="-"
                    android:maxLines="1"
                    android:textColorHint="@color/color_hint" />
            </RelativeLayout>

            <include layout="@layout/layout_line_1px_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dm010">

                <TextView
                    style="@style/px26_666"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/app_title_height"
                    android:gravity="center_vertical"
                    android:text="修改说明" />

                <EditText
                    android:id="@+id/remark_tv"
                    style="@style/px26_666"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dm010"
                    android:background="@color/eee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="top"
                    android:hint="选填"
                    android:minHeight="@dimen/desc_edit_height"
                    android:padding="@dimen/dm015"
                    android:text=""
                    android:textColorHint="@color/color_hint" />

            </LinearLayout>

            <include layout="@layout/layout_line_1px_divider" />

            <include layout="@layout/layout_file_upload_layout" />

        </LinearLayout>
    </com.android.livevideo.view.PullScrollView>

    <Button
        android:id="@+id/work_change_commit_bt"
        android:layout_width="@dimen/dm500"
        android:layout_height="@dimen/dm070"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dm030"
        android:background="@drawable/selector_login_bt"
        android:text="确认修改"
        android:textColor="@color/white"
        android:textSize="@dimen/dm028" />
</RelativeLayout>