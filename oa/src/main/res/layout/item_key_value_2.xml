<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingTop="@dimen/dm015">

    <TextView
        android:id="@+id/item_key_tv1"
        style="@style/px26_a5a5a5"
        android:layout_width="@dimen/item_key_width"
        android:layout_height="wrap_content"
        android:gravity="right" />

    <TextView
        android:id="@+id/item_value_tv1"
        style="@style/px26_212121"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:paddingLeft="@dimen/dm020" />

    <TextView
        android:id="@+id/item_key_tv2"
        style="@style/px26_a5a5a5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="right" />

    <TextView
        android:id="@+id/item_value_tv2"
        style="@style/px26_212121"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/dm020" />
</LinearLayout>