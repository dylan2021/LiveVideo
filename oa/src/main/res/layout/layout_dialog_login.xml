<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dm052"
    android:paddingLeft="@dimen/dm060"
    android:paddingRight="@dimen/dm060"
    android:paddingBottom="@dimen/dm025"
    android:background="@drawable/shape_transparent_10px"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_1"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:scaleType="centerInside"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_loading" />

    <TextView
        android:id="@+id/tv_summary"
        android:paddingTop="@dimen/dm032"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:textColor="@color/white"
        android:textSize="@dimen/dm022" />

</LinearLayout>
