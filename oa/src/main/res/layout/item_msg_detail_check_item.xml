<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_me_item_affiche"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--名称-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dm020"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_tv"
            style="@style/px26_mainColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/title_norm_tv"
            style="@style/px22_a5a5a5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm005"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dm015"
        android:background="@color/white">

        <TextView
            android:id="@+id/keyTv2"
            style="@style/px26_a5a5a5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检测结果" />

        <TextView
            android:id="@+id/check_item_result_tv"
            style="@style/px26_212121"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingLeft="@dimen/dm020"
            android:paddingRight="@dimen/next_padding_right"
            android:textColorHint="@color/color_hint" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dm010">

        <TextView
            android:id="@+id/keyTv3"
            style="@style/px26_a5a5a5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="判定" />

        <TextView
            android:id="@+id/check_item_determination_tv"
            style="@style/px26_212121"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dm020"
            android:paddingRight="@dimen/next_padding_right"
         />

    </LinearLayout>

</LinearLayout>