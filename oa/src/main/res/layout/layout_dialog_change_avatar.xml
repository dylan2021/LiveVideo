<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/diolg_bottom_height"
        android:gravity="center"
        android:text="更换头像"
        android:textColor="@color/color_7b"
        android:textSize="@dimen/dm028"
        />

    <include layout="@layout/layout_line_1px_f5f5f5"/>

    <TextView
        android:id="@+id/choose_local_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/diolg_bottom_height"
        android:background="@drawable/selector_item_bg"
        android:gravity="center"
        android:text="@string/choose_from_loc_pic"
        android:textColor="@color/color_1a"
        android:textSize="@dimen/dm030"
        />

    <include layout="@layout/layout_line_1px_f5f5f5"/>

    <TextView
        android:id="@+id/choose_recomend_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/diolg_bottom_height"
        android:background="@drawable/selector_item_bg"
        android:gravity="center"
        android:text="选择推荐头像"
        android:textColor="@color/color_1a"
        android:textSize="@dimen/dm030"
        />

    <include layout="@layout/layout_line_1px_f5f5f5"/>

    <TextView
        android:id="@+id/choose_camera_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/diolg_bottom_height"
        android:background="@drawable/selector_item_bg"
        android:gravity="center"
        android:text="拍照"
        android:textColor="@color/color_1a"
        android:textSize="@dimen/dm030"
        />

    <include layout="@layout/layout_line_height_f5"/>

    <TextView
        android:id="@+id/choose_cancel_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/diolg_bottom_height"
        android:background="@drawable/selector_item_bg"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/color212121"
        android:textSize="@dimen/dm025"
        />
</LinearLayout>