<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_me_item_affiche"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_line_divider_bottom"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm065"
        android:background="@drawable/shape_line_eee_top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_9_title_tv"
            style="@style/px22_a5a5a5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dm020"
            android:text="" />

        <TextView
            android:id="@+id/item_9_delete_bt"
            style="@style/px24_mainColor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dm001"
            android:background="@color/eee"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/main_margin_left_x"
            android:text="@string/delete"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:background="@drawable/shape_line_divider_bottom">

        <include layout="@layout/layout_must_input_pic" />

        <TextView
            style="@style/px26_212121"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/main_margin_left_x"
            android:text="入池时间" />

        <TextView
            android:id="@+id/in_pool_time_tv"
            style="@style/px26_212121"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/drawable_padding"
            android:drawableRight="@drawable/ic_next"
            android:ellipsize="end"
            android:gravity="center_vertical|right"
            android:hint="请选择"
            android:maxLines="1"
            android:paddingRight="@dimen/next_padding_right"
            android:textColorHint="@color/color_hint" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:background="@drawable/shape_line_divider_bottom">

        <include layout="@layout/layout_must_input_pic" />

        <TextView
            style="@style/px26_212121"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/main_margin_left_x"
            android:text="入池数量(kg)" />

        <EditText
            android:id="@+id/in_pool_num_et"
            style="@style/px26_212121"
            android:layout_width="@dimen/item_et_max_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:inputType="numberDecimal"
            android:drawablePadding="@dimen/drawable_padding"
            android:ellipsize="end"
            android:gravity="center_vertical|right"
            android:hint="@string/input_hint"
            android:maxLength="10"
            android:maxLines="1"
            android:paddingRight="@dimen/main_margin_left_x"
            android:textColorHint="@color/color_hint"
            android:textCursorDrawable="@drawable/shape_cursor_color_main_color" />

    </RelativeLayout>
</LinearLayout>