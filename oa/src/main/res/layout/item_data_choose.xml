<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dm015"
        android:layout_marginRight="@dimen/dm015"
        android:layout_marginTop="@dimen/dm015"
        android:background="@drawable/shape_white_20px"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dm015"
        android:paddingRight="@dimen/dm015">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dm005">
            <TextView
                android:id="@+id/name_tv"
                style="@style/px28_mainColor"
                android:layout_width="@dimen/dm600"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dm025"
                android:text="" />

            <TextView
                android:id="@+id/below_contract_tv"
                style="@style/px26_a5a5a5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />

        </LinearLayout>

        <include layout="@layout/layout_line_1px_divider"></include>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_title_height"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dm005"
            android:paddingRight="@dimen/dm005">

            <TextView
                android:id="@+id/all_inverse_tv"
                style="@style/px26_212121"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="" />

            <TextView
                android:id="@+id/start_date_tv"
                style="@style/px26_212121"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginLeft="@dimen/dm360"
                android:gravity="center_vertical"
                android:text="" />
        </RelativeLayout>

        <include layout="@layout/layout_line_1px_divider"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_title_height"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dm005"
            android:paddingRight="@dimen/dm005">

            <TextView
                android:id="@+id/all_perios_tv"
                style="@style/px26_212121"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="" />
            <TextView
                android:id="@+id/period_tv"
                style="@style/px26_a5a5a5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>