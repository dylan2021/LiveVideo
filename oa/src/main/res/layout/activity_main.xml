<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:splitMotionEvents="false">

    <LinearLayout
        android:id="@+id/ll_bot_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/main_tab_0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/main_bottom_tab_layout_padding_top"
            android:paddingBottom="@dimen/main_bottom_tab_layout_padding_bottom">

            <Button
                android:id="@+id/menu_tab_0_bt"
                android:layout_width="@dimen/main_bottom_tab_iv_size"
                android:layout_height="@dimen/main_bottom_tab_iv_size"
                android:background="@drawable/seletor_main_bottom_tab_01"
                android:clickable="false"
                android:enabled="false" />

            <TextView
                android:id="@+id/menu_home_tv"
                style="@style/main_tab_919191"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/main_bottom_tab_layout_padding_bottom"
                android:text="@string/main_bottom_tab_0" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_tab_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/main_bottom_tab_layout_padding_top"
            android:paddingBottom="@dimen/main_bottom_tab_layout_padding_bottom">

            <Button
                android:id="@+id/menu_video_bt"
                android:layout_width="@dimen/main_bottom_tab_iv_size"
                android:layout_height="@dimen/main_bottom_tab_iv_size"
                android:background="@drawable/seletor_main_bottom_tab_0"
                android:clickable="false"
                android:enabled="false"
                android:focusable="false" />

            <TextView
                android:id="@+id/menu_video_tv"
                style="@style/main_tab_919191"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/main_bottom_tab_layout_padding_bottom"
                android:text="@string/main_bottom_tab_1" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/main_tab_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/main_bottom_tab_layout_padding_top"
            android:paddingBottom="@dimen/main_bottom_tab_layout_padding_bottom"
            android:visibility="gone">

            <Button
                android:id="@+id/menu_game_hub_bt"
                android:layout_width="@dimen/main_bottom_tab_iv_size"
                android:layout_height="@dimen/main_bottom_tab_iv_size"
                android:layout_centerHorizontal="true"
                android:background="@drawable/seletor_main_bottom_tab_03"
                android:clickable="false"
                android:enabled="false"
                android:focusable="false" />

            <TextView
                android:id="@+id/tv_notifi_num"
                android:layout_width="@dimen/dm015"
                android:layout_height="@dimen/dm015"
                android:layout_toRightOf="@id/menu_game_hub_bt"
                android:background="@drawable/shape_circle_red"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/dm012"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/menu_gamehub_tv"
                style="@style/main_tab_919191"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/menu_game_hub_bt"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:paddingTop="@dimen/main_bottom_tab_layout_padding_bottom"
                android:text="@string/main_bottom_tab_03" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/main_tab_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/main_bottom_tab_layout_padding_top"
            android:paddingBottom="@dimen/main_bottom_tab_layout_padding_bottom">

            <Button
                android:id="@+id/menu_manager_bt"
                android:layout_width="@dimen/main_bottom_tab_iv_size"
                android:layout_height="@dimen/main_bottom_tab_iv_size"
                android:background="@drawable/seletor_main_bottom_tab_04"
                android:clickable="false"
                android:enabled="false"
                android:focusable="false" />

            <TextView
                android:id="@+id/menu_manager_tv"
                style="@style/main_tab_919191"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/main_bottom_tab_layout_padding_bottom"
                android:text="@string/main_bottom_tab_04" />
        </LinearLayout>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/main_fragments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bot_tab" />


    <RelativeLayout
        android:id="@+id/main_me_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bot_tab"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:clickable="true"
        android:visibility="gone">

        <TextView
            android:id="@+id/center_tv"
            style="@style/titlesize_212121_bold"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/app_title_height"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="个人中心" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm001"
            android:layout_below="@id/center_tv"
            android:background="@color/divider_color_dark"></View>

        <ImageView
            android:id="@+id/main_me_item_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dm003"
            android:layout_marginRight="@dimen/dm010"
            android:padding="@dimen/dm025"
            android:scaleType="centerInside"
            android:src="@drawable/ic_me_setting" />

        <TextView
            android:id="@+id/me_icon_tv"
            android:layout_width="@dimen/dm130"
            android:layout_height="@dimen/dm130"
            android:layout_below="@id/center_tv"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/dm050"
            android:background="@drawable/shape_circle_main_color"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/dm030" />


        <TextView
            android:id="@+id/me_user_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/center_tv"
            android:layout_toRightOf="@id/me_icon_tv"
            android:drawableRight="@drawable/ic_next_black"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/dm015"
            android:maxLines="2"
            android:paddingTop="@dimen/dm060"
            android:paddingRight="@dimen/dm042"
            android:paddingBottom="@dimen/dm050"
            android:text=""
            android:textColor="@color/color212121"
            android:textSize="@dimen/dm031" />

        <TextView
            android:id="@+id/me_department_tv"
            style="@style/px26_666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/center_tv"
            android:layout_marginTop="@dimen/dm120"
            android:layout_toRightOf="@id/me_icon_tv"
            android:paddingRight="@dimen/main_margin_left_x"
            android:text="" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:layout_below="@id/me_icon_tv"
            android:background="@color/f5"></View>

        <include
            layout="@layout/layout_main_me_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/me_icon_tv"
            android:background="@color/white" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm001"
        android:layout_above="@id/ll_bot_tab"
        android:background="@color/divider_color">

    </View>

</RelativeLayout>
