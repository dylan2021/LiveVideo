<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_line_divider_top"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="@dimen/dm025"
    android:paddingRight="@dimen/main_margin_left_x"
    android:paddingBottom="@dimen/dm025">

    <TextView
        android:id="@+id/address_name_tv"
        style="@style/px26_mainColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/address_tv"
        style="@style/px24_a5a5a5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_name_tv"
        android:layout_marginTop="@dimen/dm008"
        android:text="" />

    <TextView
        android:id="@+id/address_number_tv"
        style="@style/px24_a5a5a5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawableRight="@drawable/ic_next"
        android:drawablePadding="@dimen/dm008"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:text="" />

</RelativeLayout>