<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dm090"
    android:background="@drawable/shape_line_divider_bottom"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/dept_next_name_tv"
        style="@style/px28_212121"
        android:layout_width="0dp"
        android:layout_height="@dimen/dm090"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="" />

    <TextView
        android:id="@+id/dept_next_bt"
        style="@style/px28_mainColor"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dm080"
        android:layout_gravity="center_vertical"
        android:drawableLeft="@drawable/ic_dept_organization"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:paddingBottom="@dimen/dm020"
        android:paddingLeft="@dimen/main_margin_left_x"
        android:paddingRight="@dimen/main_margin_left_x"
        android:paddingTop="@dimen/dm020"
        android:text="下级"
        android:visibility="gone" />

</LinearLayout>