<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c43">

    <com.mm.android.deviceaddmodule.mobilecommon.widget.CommonTitle
        android:id="@+id/error_tip_title"
        style="@style/mobile_common_common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_help"
        android:layout_below="@+id/error_tip_title"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tip_img"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_5"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tip_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/dp_15"
            android:text="@string/add_device_tip_not_support_5g_1"
            android:gravity="left"
            android:textColor="@color/c40"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tip_txt_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="left"
            android:lineSpacingExtra="@dimen/dp_5"
            android:text="@string/add_device_tip_not_support_5g_2"
            android:textColor="@color/c40"
            android:textSize="14sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_help_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/c32"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/help_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:clickable="true"
            android:drawableEnd="@drawable/adddevice_icon_help"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/add_device_i_need_help"
            android:textColor="@color/c40"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>