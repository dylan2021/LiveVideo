<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="fill_horizontal"
    android:background="@drawable/mobile_common_dialog_bg"
    android:padding="24dp"
    android:gravity="center"
    android:minWidth="1000dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:gravity="left|center"
        android:textColor="@color/c40"
        android:textSize="@dimen/f0"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="left|center"
        android:textColor="@color/c40"
        android:textSize="@dimen/f2"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_message2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="left|center"
        android:textColor="@color/c0"
        android:textSize="14sp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <CheckBox
            android:id="@+id/rb_never_remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:button="@drawable/mobile_common_check_box_selector"
            android:paddingLeft="10dp"
            android:text="@string/mobile_common_common_never_remind"
            android:textColor="@color/c6"
            android:textSize="@dimen/mobile_common_text_size_small"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <LinearLayout
                android:id="@+id/two_button_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_left_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="7dp"
                    android:gravity="center"
                    android:textColor="@color/c10"
                    android:textSize="@dimen/f3"
                    android:visibility="visible"
                    android:background="@drawable/dialog_cancle_btn_bg"/>


                <TextView
                    android:id="@+id/tv_right_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="7dp"
                    android:gravity="center"
                    android:textColor="@color/c10"
                    android:textSize="@dimen/f3"
                    android:background="@drawable/dialog_conform_btn_bg"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_single_btn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textColor="@color/c0"
                android:textSize="@dimen/mobile_common_lc_alert_dialog_button_text_size" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>