<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c43"
    tools:context=".p_errortip.ErrorTipFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_help"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tip_img"
                android:layout_width="@dimen/add_device_common_tip_img_height"
                android:layout_height="@dimen/add_device_common_tip_img_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/add_device_common_margin_5"
                android:scaleType="fitCenter"
                android:src="@drawable/common_failhrlp_default" />

            <TextView
                android:id="@+id/tip_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/add_device_common_margin_15"
                android:layout_marginRight="@dimen/add_device_common_margin_15"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/c2"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tip_txt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/add_device_common_margin_15"
                android:layout_marginRight="@dimen/add_device_common_margin_15"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="@dimen/add_device_common_margin_15"
                android:gravity="center"
                android:textColor="@color/c5"
                android:textSize="15sp" />

            <FrameLayout
                android:id="@+id/child_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:paddingBottom="@dimen/add_device_common_margin_10">

        <TextView
            android:id="@+id/tv_help_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/c2"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/help_link"
            style="@style/add_device_help_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/add_device_common_margin_15"
            android:clickable="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/add_device_i_need_help"
            android:textColor="@color/c2"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>